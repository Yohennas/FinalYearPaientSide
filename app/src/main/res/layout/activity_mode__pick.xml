<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="horizontal|vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@mipmap/back"
        android:layout_height="match_parent"
        tools:context=".Mode_Pick">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ImageView
            android:layout_width="381dp"
            android:layout_height="265dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/real" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/sendRNG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/loginshape"
            android:onClick="sendRNG"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="RNG Mode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/sendActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/loginshape"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:onClick="sendActual"
            android:text="Actual Mode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/viewRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/loginshape"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:onClick="viewRecords"
            android:text="View Records"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
</ScrollView>